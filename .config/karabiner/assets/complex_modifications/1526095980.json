{
  "title": "Equals + Delete to Forward Delete",
  "rules": [
    {
      "description": "Simultaneously press Equals + Del to get a ForwardDel",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "equal_sign"
              },
              {
                "key_code": "delete_or_backspace"
              }
            ],
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ]
        }
      ]
    }
  ]
}
